<?php $_item = $this->getItem() ?>
<tr>
	<td valign="top" style="border-collapse: collapse;padding: 16px 0 0 0;">
		<p style="margin-top: 0;margin-bottom:21px;color: #212121;font-size: 13px;line-height: 21px;font-family: Georgia serif;">
			 <strong><?php echo $this->htmlEscape($_item->getName()) ?></strong>
			<?php if ($this->getItemOptions()): ?>
			<dl style="margin:0; padding:0;">
				<?php foreach ($this->getItemOptions() as $option): ?>
				<dt><strong><em><?php echo $option['label'] ?></em></strong></dt>
				<dd style="margin:0; padding:0 0 0 9px;"><?php echo nl2br($option['value']) ?></dd>
				<?php endforeach; ?>
			</dl>
			<?php endif; ?>
			<?php $addInfoBlock = $this->getProductAdditionalInformationBlock(); ?>
			<?php if ($addInfoBlock) :?>
				<?php echo $addInfoBlock->setItem($_item->getOrderItem())->toHtml(); ?>
			<?php endif; ?>
			<?php echo $this->htmlEscape($_item->getDescription()) ?>
		</p>
	</td>
	<td class="spacer" style="border-collapse: collapse;padding: 0;">&nbsp;</td>
	<td valign="top" style="border-collapse: collapse;padding: 16px 0 0 0;">
		<p style="margin-top: 0;margin-bottom: 21px;color: #212121;font-size: 13px;line-height: 21px;font-family: Georgia serif;">
			<?php echo $this->htmlEscape($this->getSku($_item)) ?>
		</p>
	</td>
	<td class="spacer" style="border-collapse: collapse;padding: 0;">&nbsp;</td>
	<td valign="top" style="border-collapse: collapse;padding: 16px 0 0 0;">
		<p style="margin-top: 0;margin-bottom: 21px;color: #212121;font-size: 13px;line-height: 21px;font-family: Georgia serif;">
			<?php echo $_item->getQty()*1 ?>
		</p>
	</td>
</tr>