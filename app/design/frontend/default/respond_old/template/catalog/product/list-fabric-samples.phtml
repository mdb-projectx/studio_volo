<?php
/**
 * Product list template
 *
 * @see Mage_Catalog_Block_Product_List
 */
?>

<?php
    $_productCollection=$this->getLoadedProductCollection();
    $_helper = $this->helper('catalog/output');
?>
<?php if(!$_productCollection->count()): ?>	

<?php else: ?>
	<div class="cf">
	   <ul id="swatches" class="cf">
           
        <?php foreach ($_productCollection as $_product): ?>
            <li>
                <input type="checkbox" name="swatches[]" id="swatches-<?php echo $_product->getUrlKey() ?>" value="<?php echo $_product->getSKU() ?>" class="validate-one-required-by-name"/>
                <label for="swatches-<?php echo $_product->getUrlKey() ?>">
                    <img src="<?php echo $this->helper('catalog/image')->init($_product, 'thumbnail')->keepAspectRatio(false)->resize(200,200); ?>" alt="" /> 
                    <span><?php echo $_helper->productAttribute($_product, $_product->getName() , 'name'); ?></span>
                </label>
            </li>
        <?php endforeach; ?>
        </ul>
    </div>
	
<?php endif; ?>


